<hr class="bg-success" style="height: 2px" />
<main>
    <div class="row">
        <div class="col-lg-7 text-center">
            <img class="img-fluid" src="@Model.Cover" />
            <h1>Album Name: @Model.Name</h1>
            <h1>Album Price: $@Model.Price</h1>
            <div class="d-flex justify-content-between">
                <a class="btn btn-success" href="/Tracks/Create?albumId=@Model.Id">Create Track</a>
                <a class="btn btn-success" href="/Albums/All">Back To All</a>
            </div>
            <br />
        </div>
        <div class="col-lg-5">
            <h1>Tracks:</h1>
            <ul class="tracks-list">
                @for (int i = 0; i < Model.Tracks.Count; i++)
                {
                    <li>
                        <strong>@(i + 1)</strong>. <a href="/Tracks/Details?albumId=@Model.Id&trackId=@Model.Tracks[i].Id">@Model.Tracks[i].Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</main>

