<hr class="bg-success" style="height: 2px" />
<div class="row justify-content-md-center">
    <main class="col-lg-6">
        <h1 class="text-center text-success">Create Album</h1>
        <hr class="bg-success" style="height: 2px" />
        <form action="/Albums/Create" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" placeholder="Name..." />
            </div>
            <div class="form-group">
                <label for="cover">Cover</label>
                <input class="form-control" type="text" id="cover" name="cover" placeholder="Cover..." />
            </div>
            <div>
                <hr class="bg-success" style="height: 2px" />
                <div class="d-flex justify-content-around">
                    <button class="btn btn-success" type="submit">Create</button>
                    <a class="btn btn-success" href="/Albums/All">Back To All</a>
                </div>
            </div>
        </form>
    </main>
</div>